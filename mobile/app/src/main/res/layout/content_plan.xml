<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@color/oil">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/extra_big_margin"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_margin="@dimen/big_margin"
            android:gravity="center">

            <include layout="@layout/free_plan_radio_button_content"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_margin="@dimen/big_margin"
            android:gravity="center">

            <include layout="@layout/premium_plan_radio_button_content"/>

        </LinearLayout>

    </LinearLayout>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Free Plan -->
        <RadioButton
            android:id="@+id/rb_free_plan"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="@dimen/big_margin"
            android:layout_weight="1" />

        <!-- Premium Plan -->
        <RadioButton
            android:id="@+id/rb_premium_plan"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="@dimen/big_margin"
            android:layout_weight="1" />
    </RadioGroup>

</FrameLayout>